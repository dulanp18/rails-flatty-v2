<div class="container">

  <div class="search mb-3">
    <%= form_tag(find_tenant_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :query, params[:query], placeholder: "Search For Person By Name or Email", class: 'search-bar' %>
    <%= submit_tag "Search", class: 'btn btn-secondary ml-2 p-2 rounded-lg' %>
    <% end %>
  </div>



  <div id="accordion">
  <% @users.each do |user| %>
  <div class="card">
    <div class="card-header" id="headingOne">
      <h5 class="mb-0">
        <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          <%= user.first_name + " " + user.last_name %>
        </button>
      </h5>
    </div>

    <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
      <div class="card-body d-flex justify-content-between">
        <p><%= user.email  %></p>
        <p><%= user.date_of_birth %></p>
        <p><%= user.nationality  %></p>
        <p><%= user.bio.nil? ? "No Description" : user.bio  %>
        <span class="badge badge-primary badge-pill"><%= user.tenant.nil? ? "Looking For A Flat" : "Sharing A Flat"  %></span>
      </div>
      <div class="card-footer">
        <p>Want to add Nipunee To Your Flat?</p>
        <%= link_to 'Add onto lease', join_path(:user => {:id => user.id, :agreement => 'lease' }), method: :post %>
        <%= link_to 'Add with flatmate agreement', join_path(:user => {:id => user.id, :agreement => 'flatmate' }) , method: :post %>
      </div>
    </div>
  </div>
  <% end %>
  </div>


</div>
