
<div class="container">

<ul class="list-group">
  <% @flats.each do |flat| %>
  <li class="list-group-item d-flex justify-content-between align-items-center">
    <%= flat.flat_name.nil? ? flat.street_address : flat.flat_name  %>
    <span class="badge badge-primary badge-pill"><%= flat.current_tenants_num  %></span>
  </li>
  <% end %>
</ul>

</div>
